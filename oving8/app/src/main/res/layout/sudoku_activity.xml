<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="525dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:id="@+id/ll_board"
        >
        <LinearLayout
            android:id="@+id/ll_row1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
        >
            <GridView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/gv_0_0"
                android:layout_margin="0dp"
                android:padding="5dp"
                android:background="@color/brown"
            />

            <GridView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/gv_0_1"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:background="@color/brown"
            />

            <GridView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/gv_0_2"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:background="@color/brown"
            />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_row2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >
            <GridView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/gv_1_0"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:background="@color/brown"
                />

            <GridView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/gv_1_1"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:background="@color/brown"
                />

            <GridView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/gv_1_2"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:background="@color/brown"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_row3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >
            <GridView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/gv_2_0"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:background="@color/brown"
                />

            <GridView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/gv_2_1"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:background="@color/brown"
                />

            <GridView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/gv_2_2"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:background="@color/brown"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/ll_win"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/win_message"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/ll_under_board"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="invisible"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
        >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mark_unsure"
                android:id="@+id/tv_unsure"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
            />
            <CheckBox
                android:id="@+id/checkbox_number_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onCheckBoxToggle"
                />
        </LinearLayout>
        <GridView
            android:id="@+id/gv_number_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        />
    </LinearLayout>
</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>